# 生产环境Creem.io配置
# 请在部署到服务器时使用此配置

# 关闭测试模式，使用正式API
CREEM_TEST_MODE=False

# 使用正式的Creem API密钥 (需要从Creem.io控制台获取)
CREEM_API_KEY=your_production_creem_api_key_here

# 正式环境的产品ID (需要在Creem.io控制台创建)
CREEM_BASIC_PRODUCT_ID=your_production_basic_product_id
CREEM_PREMIUM_PRODUCT_ID=your_production_premium_product_id

# 服务器前端URL (替换为你的实际域名)
FRONTEND_URL=https://yourdomain.com

# 数据库配置 (生产环境)
DATABASE_URL=mysql+pymysql://username:password@host:port/database_name?charset=utf8mb4

# Redis配置 (生产环境)
REDIS_URL=redis://your_redis_host:6379/0

# JWT密钥 (生产环境使用强密钥)
JWT_SECRET_KEY=your_strong_jwt_secret_key_here

# 其他生产环境配置
FLASK_ENV=production
DEBUG=False
